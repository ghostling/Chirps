<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="cs121.jam.chirps.ChirpDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chirp_details_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chirp_description"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/chirp_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:layout_gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chirp_categories"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/chirp_details_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:layout_gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chirp_schools"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/chirp_relevant_schools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:layout_gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chirp_expires"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/chirp_details_expiration_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:layout_gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chirp_user"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/chirp_details_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:background="@drawable/text_view_border"
        android:layout_marginTop="2pt"
        android:paddingTop="2pt"
        android:paddingBottom="2pt"
        android:paddingLeft="2pt"
        android:paddingRight="2pt"
        android:layout_gravity="start" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chirp_contact_info"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/chirp_details_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:layout_gravity="start" />

</LinearLayout>
